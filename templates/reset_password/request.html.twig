{% extends 'base.html.twig' %}

{% block title %}Récupération de compte{% endblock %}

{% block body %}
<div class="auth">
  <div class="auth-card">

    {# ✅ Logo no topo (igual ao login/register) #}
    <div class="brand">
      <img src="{{ asset('img/cook1.jpg') }}" alt="ViteGourmand" class="brand__logo">
      <h1 class="brand__title">ViteGourmand</h1>
      <p class="brand__subtitle">Récupérez l’accès à votre compte</p>
    </div>

    <div class="auth-header">
      <h2>Réinitialiser votre mot de passe</h2>
      <p>Indiquez votre e-mail. Nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
    </div>

    {# ✅ API message (success / error) #}
    <div id="api-message"></div>

    {# ✅ API form (JSON) #}
    <form id="forgot-form" class="auth-form" novalidate>
      <div class="field">
        <label class="auth-label" for="email">Adresse e-mail</label>
        <input id="email"
               class="auth-input"
               type="email"
               placeholder="votreemail@exemple.com"
               autocomplete="email"
               required>
      </div>

      <button id="btn-submit" class="btn-primary" type="submit">Envoyer le lien</button>

      <a href="{{ path('app_login') }}" class="forgot-link">Retour à la connexion</a>
    </form>

  </div>
</div>

<script>
  const form = document.getElementById('forgot-form');
  const emailInput = document.getElementById('email');
  const msg = document.getElementById('api-message');
  const btn = document.getElementById('btn-submit');

  const show = (type, text) => {
    msg.innerHTML = `<div class="${type === 'success' ? 'alert-success' : 'alert-error'}">${text}</div>`;
  };

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    msg.innerHTML = '';

    const email = emailInput.value.trim();
    if (!email) {
      show('error', 'Adresse e-mail obligatoire.');
      return;
    }

    btn.disabled = true;
    btn.style.opacity = '0.85';

    try {
      const res = await fetch('/api/auth/forgot-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email })
      });

      const data = await res.json().catch(() => ({}));

      if (!res.ok) {
        show('error', data.message ?? 'Erreur. Réessayez.');
      } else {
        show('success', data.message ?? 'Un e-mail de réinitialisation a été envoyé.');
        form.reset();
      }
    } catch (err) {
      show('error', 'Erreur serveur. Réessayez plus tard.');
    } finally {
      btn.disabled = false;
      btn.style.opacity = '1';
    }
  });
</script>

<style>
:root{
  --bg1:#0b1220;
  --bg2:#111b33;
  --card:rgba(255,255,255,.92);
  --text:#0f172a;
  --muted:#64748b;
  --border:rgba(15,23,42,.10);

  --primary:#2563eb;
  --primary2:#1d4ed8;
  --ring:rgba(37,99,235,.25);

  --danger:#dc2626;
  --success:#16a34a;
}

/* ✅ Reset / Anti-overflow */
.auth-card, .auth-form, .field { box-sizing: border-box; }
.auth-card * { box-sizing: border-box; }

.auth{
  min-height:100vh;
  display:grid;
  place-items:center;
  padding:18px;
  background:
    radial-gradient(1000px 500px at 10% 10%, rgba(37,99,235,.25), transparent 55%),
    radial-gradient(900px 450px at 90% 20%, rgba(99,102,241,.22), transparent 55%),
    linear-gradient(160deg, var(--bg1), var(--bg2));
}

.auth-card{
  width:100%;
  max-width:420px;
  background:var(--card);
  border:1px solid rgba(255,255,255,.25);
  border-radius:16px;
  box-shadow: 0 18px 60px rgba(0,0,0,.35), 0 2px 10px rgba(0,0,0,.12);
  padding:32px;
  backdrop-filter: blur(10px);
  display:flex;
  flex-direction:column;
  gap:12px;
}

/* ✅ Brand (logo topo) */
.brand{
  text-align:center;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:8px;
  margin-bottom:4px;
}
.brand__logo{
  width:84px;
  height:84px;
  border-radius:999px;
  object-fit:cover;
  border: 3px solid rgba(255,255,255,.75);
  box-shadow: 0 10px 24px rgba(0,0,0,.18);
}
.brand__title{
  margin:0;
  font-weight:900;
  font-size:26px;
  letter-spacing:-.02em;
  color:var(--text);
  font-family: ui-sans-serif, system-ui, -apple-system, "Poppins", "Segoe UI", Roboto, Arial, sans-serif;
}
.brand__subtitle{
  margin:0;
  color:var(--muted);
  font-size:14px;
}

.auth-header{
  text-align:center;
  margin-bottom:6px;
}
.auth-header h2{
  margin:0;
  font-size:18px;
  font-weight:900;
  color:var(--text);
  letter-spacing:-.01em;
}
.auth-header p{
  margin:6px 0 0;
  color:var(--muted);
  font-size:14px;
}

/* Form */
.auth-form{
  width:100%;
  display:flex;
  flex-direction:column;
  gap:12px;
}

.field{
  width:100%;
  display:flex;
  flex-direction:column;
  gap:6px;
  margin:0 !important;
  min-width:0;
}

/* ✅ Labels centralizadas */
.auth-label{
  display:block;
  width:100%;
  margin:0 !important;
  text-align:center;
  font-weight:800;
  font-size:12px;
  color:var(--muted);
  line-height:1.2;
}

/* ✅ Input anti-bootstrap */
.auth-input{
  display:block !important;
  width:100% !important;
  max-width:100% !important;
  min-width:0 !important;
  margin:0 !important;
  padding:12px 12px !important;
  border-radius:12px !important;
  border:1px solid var(--border) !important;
  background: rgba(255,255,255,.85) !important;
  font-size:15px !important;
  color:var(--text) !important;
  box-shadow:none !important;
  outline:none !important;
  transition: border-color .2s ease, box-shadow .2s ease, transform .02s ease;
}
.auth-input::placeholder{ color: rgba(100,116,139,.75); }
.auth-input:focus{
  border-color: rgba(37,99,235,.55) !important;
  box-shadow: 0 0 0 4px var(--ring) !important;
}
.auth-input:active{ transform: translateY(1px); }

.btn-primary{
  width:100%;
  padding:12px 14px !important;
  border:none !important;
  border-radius:12px !important;
  background: linear-gradient(135deg, var(--primary), var(--primary2)) !important;
  color:#fff !important;
  font-weight:900 !important;
  font-size:16px !important;
  cursor:pointer;
  box-shadow: 0 10px 24px rgba(37,99,235,.25);
  transition: transform .06s ease, filter .2s ease, box-shadow .2s ease;
}
.btn-primary:hover{
  filter: brightness(1.02);
  box-shadow: 0 12px 28px rgba(37,99,235,.32);
}
.btn-primary:active{ transform: translateY(1px); }

.forgot-link{
  align-self:center;
  margin-top:2px;
  font-size:13px;
  color:var(--primary);
  font-weight:900;
  text-decoration:none;
}
.forgot-link:hover{ text-decoration:underline; }

/* Alerts */
.alert-success{
  margin:0 0 12px;
  padding:10px 12px;
  border-radius:12px;
  background: rgba(22,163,74,.10);
  border: 1px solid rgba(22,163,74,.22);
  color: var(--success);
  font-size:13px;
  font-weight:900;
  text-align:center;
}
.alert-error{
  margin:0 0 12px;
  padding:10px 12px;
  border-radius:12px;
  background: rgba(220,38,38,.08);
  border: 1px solid rgba(220,38,38,.20);
  color: var(--danger);
  font-size:13px;
  font-weight:900;
  text-align:center;
}

@media (max-width: 420px){
  .auth-card{ padding:20px; border-radius:14px; }
  .brand__title{ font-size:22px; }
}
</style>
{% endblock %}
