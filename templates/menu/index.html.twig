<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger");
    const navMenu = document.getElementById("nav-menu");

    const userBtn  = document.getElementById("userBtn");
    const userMenu = document.getElementById("userMenu");

    function closeNav() {
      if (!hamburger || !navMenu) return;
      hamburger.classList.remove("active");
      navMenu.classList.remove("active");
    }

    function toggleNav() {
      if (!hamburger || !navMenu) return;
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
    }

    function closeUserMenu() {
      if (!userMenu || !userBtn) return;
      userMenu.classList.remove("open");
      userBtn.setAttribute("aria-expanded", "false");
    }

    function toggleUserMenu() {
      if (!userMenu || !userBtn) return;
      const willOpen = !userMenu.classList.contains("open");
      userMenu.classList.toggle("open");
      userBtn.setAttribute("aria-expanded", willOpen ? "true" : "false");
    }

    // ‚úÖ hamburger click
    if (hamburger) {
      hamburger.addEventListener("click", (e) => {
        e.stopPropagation();
        toggleNav();
        closeUserMenu(); // evita menus abertos ao mesmo tempo
      });
    }

    // ‚úÖ fecha nav ao clicar em links (mobile UX)
    if (navMenu) {
      navMenu.querySelectorAll("a").forEach((a) => {
        a.addEventListener("click", () => closeNav());
      });
    }

    // ‚úÖ avatar dropdown
    if (userBtn) {
      userBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        toggleUserMenu();
        closeNav(); // evita menus abertos ao mesmo tempo
      });
    }

    // ‚úÖ clicar fora fecha tudo
    document.addEventListener("click", (e) => {
      const clickedInsideNav =
        navMenu && navMenu.contains(e.target);
      const clickedHamburger =
        hamburger && hamburger.contains(e.target);

      const clickedInsideUser =
        (userMenu && userMenu.contains(e.target)) ||
        (userBtn && userBtn.contains(e.target));

      if (!clickedInsideNav && !clickedHamburger) closeNav();
      if (!clickedInsideUser) closeUserMenu();
    });

    // ‚úÖ ESC fecha tudo
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        closeNav();
        closeUserMenu();
      }
    });
  });
</script>
<script>
document.addEventListener("DOMContentLoaded", () => {

  const hamburger = document.getElementById("hamburger");
  const navMenu   = document.getElementById("nav-menu");
  const mainNav   = document.querySelector(".main-nav");

  const loginItem = document.getElementById("nav-login-item");
  const userItem  = document.getElementById("nav-user-item");

  const userBtn   = document.getElementById("userBtn");
  const userMenu  = document.getElementById("userMenu");
  const userName  = document.getElementById("userName");
  const userAvatar= document.getElementById("userAvatar");

  /* ===== HAMBURGER ===== */
  if (hamburger) {
    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
      mainNav.classList.toggle("menu-open");
    });
  }

  document.addEventListener("click", (e) => {
    if (!mainNav.contains(e.target)) {
      hamburger?.classList.remove("active");
      navMenu?.classList.remove("active");
      mainNav?.classList.remove("menu-open");
      userMenu?.classList.remove("open");
    }
  });

  /* ===== AVATAR DROPDOWN ===== */
  userBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    userMenu.classList.toggle("open");
  });

  /* ===== AUTH CHECK ===== */
  async function checkAuth(){
    try{
      const res = await fetch('/api/me', {
        credentials:'include',
        headers:{'Accept':'application/json'}
      });

      if(!res.ok){
        loginItem.style.display = '';
        userItem.style.display  = 'none';
        return;
      }

      const me = await res.json();

      loginItem.style.display = 'none';
      userItem.style.display  = '';

      const name = me.firstName
        ? me.firstName + (me.lastName ? ' ' + me.lastName : '')
        : (me.email || 'Utilisateur');

      userName.textContent = name;
      userAvatar.textContent = name.charAt(0).toUpperCase();

    }catch(e){
      loginItem.style.display = '';
      userItem.style.display  = 'none';
    }
  }

  checkAuth();
});
</script>



