{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="auth">
  <div class="auth-card">

    <div class="brand">
      <img src="{{ asset('img/cook1.jpg') }}" alt="ViteGourmand" class="brand__logo">
      <h1 class="brand__title">ViteGourmand</h1>
      <p class="brand__subtitle">Connectez-vous pour continuer</p>
    </div>

    {# ✅ Login passa pela API #}
    <form id="login-form" class="auth-form" novalidate>
      <div class="field">
        <label for="email" class="auth-label">Adresse e-mail</label>
        <input id="email" type="email" name="email"
               value="{{ last_username|default('') }}"
               placeholder="votreemail@exemple.com"
               autocomplete="email"
               class="auth-input"
               required>
      </div>

      <div class="field">
        <label for="password" class="auth-label">Mot de passe</label>
        <input id="password" type="password" name="password"
               placeholder="••••••••"
               autocomplete="current-password"
               class="auth-input"
               required>
      </div>

      <button class="btn-primary" type="submit">Se connecter</button>

      <a class="btn-google" href="{{ path('connect_google_start') }}">
        <span class="google-icon" aria-hidden="true"></span>
        Continuer avec Google
      </a>

      <a class="forgot-link" href="{{ path('app_forgot_password') }}">
        Mot de passe oublié ?
      </a>
    </form>

    <div class="auth-footer">
      <p>Vous n’avez pas de compte ? <a href="{{ path('app_register') }}">S’inscrire</a></p>
    </div>

    <div id="login-error" class="alert-error" style="display:none;"></div>

    {% if error|default(false) %}
      <div class="alert-error">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

  </div>
</div>
<script>
(function () {
  const form = document.getElementById('login-form');
  const errBox = document.getElementById('login-error');

  const URL_ADMIN = "{{ path('admin_dashboard') }}";      // /admin
  const URL_EMPLOYEE = "/employee";                      // troca por path() se tiveres rota
  const URL_DASHBOARD = "{{ path('app_dashboard') }}";   // /dashboard

  function showError(msg) {
    errBox.textContent = msg;
    errBox.style.display = 'block';
  }

  function normalizeRoles(payload) {
    let raw = payload?.roles ?? payload?.user?.roles ?? [];

    if (typeof raw === 'string') {
      const s = raw.trim();
      try { raw = JSON.parse(s); }
      catch { raw = s.split(',').map(x => x.trim()).filter(Boolean); }
    }

    if (raw && typeof raw === 'object' && !Array.isArray(raw)) {
      raw = Object.values(raw);
    }

    return (Array.isArray(raw) ? raw : [])
      .map(r => String(r ?? '').trim().toUpperCase())
      .filter(Boolean);
  }

  function redirectByRoles(roles) {
    if (roles.includes('ROLE_ADMIN') || roles.includes('ROLE_SUPER_ADMIN')) {
      window.location.replace(URL_ADMIN);
      return true;
    }
    if (roles.includes('ROLE_EMPLOYEE')) {
      window.location.replace(URL_EMPLOYEE);
      return true;
    }
    window.location.replace(URL_DASHBOARD);
    return true;
  }

  // ✅ BLOQUEIO: se já estiver logado (cookie BEARER válido), não deixa ficar no /login
  (async () => {
    try {
      const meRes = await fetch('/api/me', {
        method: 'GET',
        credentials: 'include',
        headers: { 'Accept': 'application/json' }
      });

      if (!meRes.ok) return; // não logado => mostra o form normal

      const me = await meRes.json();
      const roles = normalizeRoles(me);

      // se tiver roles, redireciona já
      if (roles.length) redirectByRoles(roles);
    } catch (e) {
      // falhou => deixa o form aparecer
    }
  })();

  form.addEventListener('submit', async function (e) {
    e.preventDefault();
    errBox.style.display = 'none';

    const email = document.getElementById('email').value.trim().toLowerCase();
    const password = document.getElementById('password').value;

    const res = await fetch('/api/auth/login', {
      method: 'POST',
      credentials: 'include',
      headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
      body: JSON.stringify({ email, password })
    });

    let data = {};
    try { data = await res.json(); } catch (e) {}

    if (!res.ok) {
      showError(data.message || 'Identifiants invalides');
      return;
    }

    // ✅ prioridade: redirect vindo do backend
    if (data.redirect) {
      window.location.replace(data.redirect);
      return;
    }

    // fallback por roles (se um dia não vier redirect)
    const roles = normalizeRoles(data);
    redirectByRoles(roles);
  });
})();
</script>


<style>

:root{
  --bg1:#0b1220;
  --bg2:#111b33;
  --card:rgba(255,255,255,.92);
  --text:#0f172a;
  --muted:#64748b;
  --border:rgba(15,23,42,.10);

  --primary:#2563eb;
  --primary2:#1d4ed8;
  --ring:rgba(37,99,235,.25);

  --danger:#dc2626;
}

.auth-card, .auth-form, .field { box-sizing: border-box; }
.auth-card * { box-sizing: border-box; }

.auth{
  min-height:100vh;
  display:grid;
  place-items:center;
  padding:18px;
  background:
    radial-gradient(1000px 500px at 10% 10%, rgba(37,99,235,.25), transparent 55%),
    radial-gradient(900px 450px at 90% 20%, rgba(99,102,241,.22), transparent 55%),
    linear-gradient(160deg, var(--bg1), var(--bg2));
}

.auth-card{
  width:100%;
  max-width:420px;
  background:var(--card);
  border:1px solid rgba(255,255,255,.25);
  border-radius:16px;
  box-shadow: 0 18px 60px rgba(0,0,0,.35), 0 2px 10px rgba(0,0,0,.12);
  padding:32px;
  backdrop-filter: blur(10px);
  display:flex;
  flex-direction:column;
  gap:12px;
}

.brand{
  text-align:center;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:8px;
  margin-bottom:6px;
}
.brand__logo{
  width:84px;
  height:84px;
  border-radius:999px;
  object-fit:cover;
  border: 3px solid rgba(255,255,255,.75);
  box-shadow: 0 10px 24px rgba(0,0,0,.18);
}
.brand__title{
  margin:0;
  font-weight:900;
  font-size:26px;
  letter-spacing:-.02em;
  color:var(--text);
  font-family: ui-sans-serif, system-ui, -apple-system, "Poppins", "Segoe UI", Roboto, Arial, sans-serif;
}
.brand__subtitle{
  margin:0;
  color:var(--muted);
  font-size:14px;
}

.auth-form{
  width:100%;
  display:flex;
  flex-direction:column;
  gap:12px;
}

.field{
  width:100%;
  display:flex;
  flex-direction:column;
  gap:6px;
  margin:0 !important;
  min-width:0;
}

.auth-label{
  display:block;
  width:100%;
  margin:0 !important;
  text-align:left;
  font-weight:800;
  font-size:12px;
  color:var(--muted);
  line-height:1.2;
}

.auth-input{
  display:block !important;
  width:100% !important;
  max-width:100% !important;
  min-width:0 !important;
  margin:0 !important;
  padding:12px 12px !important;
  border-radius:12px !important;
  border:1px solid var(--border) !important;
  background: rgba(255,255,255,.85) !important;
  font-size:15px !important;
  color:var(--text) !important;
  box-shadow:none !important;
  outline:none !important;
  transition: border-color .2s ease, box-shadow .2s ease, transform .02s ease;
}
.auth-input::placeholder{ color: rgba(100,116,139,.75); }
.auth-input:focus{
  border-color: rgba(37,99,235,.55) !important;
  box-shadow: 0 0 0 4px var(--ring) !important;
}
.auth-input:active{ transform: translateY(1px); }

.btn-primary{
  width:100%;
  padding:12px 14px !important;
  border:none !important;
  border-radius:12px !important;
  background: linear-gradient(135deg, var(--primary), var(--primary2)) !important;
  color:#fff !important;
  font-weight:900 !important;
  font-size:16px !important;
  cursor:pointer;
  box-shadow: 0 10px 24px rgba(37,99,235,.25);
  transition: transform .06s ease, filter .2s ease, box-shadow .2s ease;
}
.btn-primary:hover{
  filter: brightness(1.02);
  box-shadow: 0 12px 28px rgba(37,99,235,.32);
}
.btn-primary:active{ transform: translateY(1px); }

.btn-google{
  display:flex;
  align-items:center;
  justify-content:center;
  gap:10px;
  width:100%;
  padding:12px 14px !important;
  border-radius:12px !important;
  border:1px solid rgba(15,23,42,.12) !important;
  background: rgba(255,255,255,.80) !important;
  color: var(--text) !important;
  font-weight:900 !important;
  text-decoration:none;
  transition: background .2s ease, transform .06s ease, box-shadow .2s ease;
}
.btn-google:hover{
  background: rgba(255,255,255,1) !important;
  box-shadow: 0 10px 22px rgba(15,23,42,.08);
}
.btn-google:active{ transform: translateY(1px); }

.google-icon{
  width:18px;
  height:18px;
  border-radius:6px;
  display:inline-block;
  background: conic-gradient(from 45deg,
    #ea4335 0 25%,
    #fbbc05 0 50%,
    #34a853 0 75%,
    #4285f4 0 100%);
  box-shadow: 0 2px 8px rgba(0,0,0,.08);
}

.forgot-link{
  align-self:center;
  margin-top:2px;
  font-size:13px;
  color:var(--primary);
  font-weight:900;
  text-decoration:none;
}
.forgot-link:hover{ text-decoration:underline; }

.alert-error{
  margin-top:14px;
  padding:10px 12px;
  border-radius:12px;
  background: rgba(220,38,38,.08);
  border: 1px solid rgba(220,38,38,.20);
  color: var(--danger);
  font-size:13px;
  font-weight:800;
  text-align:center;
}

.auth-footer{
  margin-top:0px;
  text-align:center;
  font-size:14px;
  color:var(--muted);
}
.auth-footer a{
  color:var(--primary);
  font-weight:900;
  text-decoration:none;
}
.auth-footer a:hover{ text-decoration: underline; }
body{
  margin: 0px;
}

@media (max-width: 420px){
  .auth-card{ padding:20px; border-radius:14px; }
  .brand__title{ font-size:22px; }
}
</style>
{% endblock %}
