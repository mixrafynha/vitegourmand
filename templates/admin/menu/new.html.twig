<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nouveau menu</title>

    {% form_theme form 'bootstrap_5_layout.html.twig' %}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #eef2f7, #dbe4f3);
        }

        .wrapper {
            min-height: 100vh;
        }

        .card-custom {
            border: 0;
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.08);
            padding: 50px 40px;
            background: #fff;
        }

        h1 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 40px;
        }

        /* Centralizar labels */
        .form-label {
            display: block;
            text-align: center;
            font-weight: 600;
            margin-bottom: 8px;
        }

        /* Centralizar inputs */
        .form-control {
            text-align: center;
            border-radius: 12px;
        }

        /* Galeria de fotos */
        .photo-preview {
            width: 100%;
            height: 160px;
            border-radius: 15px;
            object-fit: cover;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        }

        .btn-custom {
            width: 100%;
            padding: 14px;
            border-radius: 14px;
            font-weight: 600;
            background: linear-gradient(90deg, #2563eb, #1d4ed8);
            border: none;
            color: #fff;
            transition: 0.3s;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(37,99,235,0.3);
        }

        @media (max-width: 576px) {
            .card-custom {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>

<div class="container-fluid wrapper d-flex align-items-center justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8 col-11">
        <div class="card card-custom">

            <h1>Nouveau menu</h1>

            {{ form_start(form) }}

                {{ form_widget(form) }}

                <!-- Área de até 3 fotos -->
                <div class="row mt-4 text-center">
                    <div class="col-md-4 col-12 mb-3">
                        <img src="https://via.placeholder.com/300x200" class="photo-preview" alt="Foto 1">
                    </div>
                    <div class="col-md-4 col-12 mb-3">
                        <img src="https://via.placeholder.com/300x200" class="photo-preview" alt="Foto 2">
                    </div>
                    <div class="col-md-4 col-12 mb-3">
                        <img src="https://via.placeholder.com/300x200" class="photo-preview" alt="Foto 3">
                    </div>
                </div>

                <button type="submit" class="btn btn-custom mt-4">
                    Enregistrer
                </button>

            {{ form_end(form) }}

        </div>
    </div>
</div>

</body>
</html>
