<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nouveau menu</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #eef2f7, #dbe4f3);
        }

        .form-wrapper {
            min-height: 100vh;
        }

        .card-custom {
            border: 0;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.08);
            padding: 50px 40px;
            background: #ffffff;
            transition: all 0.3s ease;
        }

        .card-custom:hover {
            transform: translateY(-4px);
        }

        .title {
            font-weight: 700;
            font-size: 28px;
            margin-bottom: 35px;
            text-align: center;
            color: #1f2937;
        }

        label {
            font-weight: 600;
            text-align: center;
            width: 100%;
            margin-bottom: 6px;
        }

        .form-control {
            border-radius: 12px;
            padding: 12px;
        }

        .btn-custom {
            width: 100%;
            padding: 14px;
            border-radius: 14px;
            font-weight: 600;
            font-size: 16px;
            background: linear-gradient(90deg, #2563eb, #1d4ed8);
            border: none;
            color: #fff;
            transition: 0.3s ease;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(37,99,235,0.3);
        }

        .image-preview {
            width: 100%;
            height: 250px;
            border-radius: 16px;
            background: #f3f4f6;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        @media (max-width: 768px) {
            .card-custom {
                padding: 30px 20px;
            }

            .title {
                font-size: 22px;
            }

            .image-preview {
                height: 200px;
                margin-bottom: 25px;
            }
        }
    </style>
</head>
<body>

<div class="container-fluid form-wrapper d-flex align-items-center justify-content-center">
    <div class="col-xl-8 col-lg-9 col-md-11 col-11">
        <div class="card card-custom">

            <div class="title">
                Nouveau menu
            </div>

            <div class="row g-4 align-items-start">

                <!-- Preview Imagem -->
                <div class="col-md-5">
                    <div class="image-preview" id="previewContainer">
                        <span class="text-muted">Pré-visualização</span>
                    </div>
                </div>

                <!-- Formulário -->
                <div class="col-md-7">

                    {{ form_start(form) }}

                        {% for field in form %}
                            <div class="mb-3 text-center">
                                {{ form_label(field) }}
                                {{ form_widget(field, {
                                    attr: { class: 'form-control' }
                                }) }}
                                {{ form_errors(field) }}
                            </div>
                        {% endfor %}

                        <button type="submit" class="btn btn-custom mt-3">
                            Enregistrer
                        </button>

                    {{ form_end(form) }}

                </div>

            </div>

        </div>
    </div>
</div>

<script>
    // Preview automática da imagem
    document.addEventListener("DOMContentLoaded", function () {
        const input = document.querySelector('input[type="file"]');
        const previewContainer = document.getElementById('previewContainer');

        if (input) {
            input.addEventListener("change", function () {
                const file = this.files[0];

                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        previewContainer.innerHTML =
                            `<img src="${e.target.result}" alt="Preview">`;
                    };
                    reader.readAsDataURL(file);
                }
            });
        }
    });
</script>

</body>
</html>
