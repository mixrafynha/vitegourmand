<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nouveau menu</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #eef2f7, #dbe4f3);
            margin: 0;
        }

        .form-wrapper {
            min-height: 100vh;
        }

        .card-custom {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.07);
            padding: 30px 25px;
            background: #ffffff;
            max-width: 680px;
            margin: auto;
        }

        .title {
            font-weight: 700;
            font-size: 20px;
            margin-bottom: 20px;
            text-align: center;
            color: #1f2937;
        }

        /* Labels alinhadas à esquerda */
        label {
            font-weight: 600;
            font-size: 13px;
            display: block;
            text-align: left;
            margin-bottom: 4px;
        }

        .form-control {
            border-radius: 8px;
            padding: 6px 10px;
            font-size: 13px;
        }

        .form-check {
            padding-left: 1.6em;
        }

        .form-check-input {
            cursor: pointer;
        }

        .form-check-label {
            cursor: pointer;
            font-size: 13px;
        }

        .btn-custom {
            width: 100%;
            padding: 9px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 13px;
            background: linear-gradient(90deg, #2563eb, #1d4ed8);
            border: none;
            color: #fff;
            transition: 0.3s ease;
        }

        .btn-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 15px rgba(37,99,235,0.25);
        }

        .image-preview {
            width: 100%;
            height: 150px;
            border-radius: 10px;
            background: #f3f4f6;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            font-size: 12px;
        }

        .image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* MOBILE */
        @media (max-width: 768px) {

            body {
                padding: 4px;
            }

            .container-fluid {
                padding: 0 4px !important;
            }

            .card-custom {
                padding: 15px 12px;
                margin: 4px;
                border-radius: 14px;
            }

            .row {
                margin: 0 !important;
            }

            .col-md-4,
            .col-md-8 {
                padding: 4px !important;
            }

            .image-preview {
                height: 120px;
                margin-bottom: 8px;
            }

            .mb-2,
            .mb-3 {
                margin-bottom: 8px !important;
            }
        }
    </style>
</head>
<body>

<div class="container-fluid form-wrapper d-flex align-items-center justify-content-center">
    <div class="w-100">
        <div class="card card-custom">

            <div class="title">
                Nouveau menu
            </div>

            <div class="row g-2 align-items-start">

                <!-- Preview -->
                <div class="col-md-4">
                    <div class="image-preview" id="previewContainer">
                        <span class="text-muted">Aperçu</span>
                    </div>
                </div>

                <!-- Form -->
                <div class="col-md-8">

                    {{ form_start(form) }}

                        {% for field in form %}

                            {% if field.vars.block_prefixes[1] == 'checkbox' %}
                                <div class="mb-3 form-check">
                                    {{ form_widget(field, { attr: { class: 'form-check-input' } }) }}
                                    {{ form_label(field, null, { label_attr: { class: 'form-check-label' } }) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% else %}
                                <div class="mb-2">
                                    {{ form_label(field) }}
                                    {{ form_widget(field, { attr: { class: 'form-control' } }) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}

                        {% endfor %}

                        <button type="submit" class="btn btn-custom mt-2">
                            Enregistrer
                        </button>

                    {{ form_end(form) }}

                </div>

            </div>

        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const input = document.querySelector('input[type="file"]');
    const previewContainer = document.getElementById('previewContainer');

    if (input) {
        input.addEventListener("change", function () {
            const file = this.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    previewContainer.innerHTML =
                        `<img src="${e.target.result}" alt="Preview">`;
                };
                reader.readAsDataURL(file);
            }
        });
    }
});
</script>

</body>
</html>
