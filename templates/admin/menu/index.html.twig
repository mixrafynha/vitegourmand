{% extends 'base.html.twig' %}

{% block title %}Admin • Menus{% endblock %}

{% block body %}
<style>
:root{
  --primary:#2563eb;
  --primary2:#1d4ed8;
  --danger:#dc2626;
  --success:#16a34a;
  --warning:#f59e0b;
  --muted:#64748b;
}

.adm-wrap{
  min-height:100vh;
  padding:14px;
  background:linear-gradient(160deg,#0b1220,#111b33);
}

.adm-container{
  max-width:1000px;
  margin:0 auto;
  display:flex;
  flex-direction:column;
  gap:12px;
}

.adm-topbar{
  background:rgba(255,255,255,.08);
  border-radius:14px;
  padding:14px;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  gap:10px;
}

.adm-title h1{
  margin:0;
  font-size:18px;
  font-weight:800;
  color:#fff;
}
.adm-title p{
  margin:2px 0 0;
  font-size:12px;
  color:rgba(255,255,255,.7);
}

.adm-actions{
  display:flex;
  gap:8px;
  flex-wrap:wrap;
}

.btn{
  border:none;
  border-radius:10px;
  padding:8px 12px;
  font-size:12px;
  font-weight:700;
  text-decoration:none;
  display:inline-flex;
  align-items:center;
}

.btn-primary{
  background:linear-gradient(135deg,var(--primary),var(--primary2));
  color:#fff;
}
.btn-secondary{
  background:rgba(255,255,255,.15);
  color:#fff;
}

.adm-card{
  background:#fff;
  border-radius:14px;
  overflow:hidden;
}

.adm-toolbar{
  padding:10px;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  gap:8px;
  border-bottom:1px solid #eee;
}

.search input{
  padding:6px 10px;
  border-radius:8px;
  border:1px solid #ddd;
  font-size:12px;
}

.pill{
  padding:4px 10px;
  border-radius:999px;
  font-size:11px;
  font-weight:700;
  background:#f3f4f6;
}

table{
  width:100%;
  border-collapse:collapse;
  font-size:13px;
}

thead th{
  padding:8px;
  background:#f9fafb;
  font-size:11px;
  text-transform:uppercase;
}

tbody td{
  padding:8px;
  border-bottom:1px solid #f1f1f1;
}

.img{
  width:55px;
  height:40px;
  object-fit:cover;
  border-radius:8px;
}

.badge{
  padding:4px 8px;
  border-radius:999px;
  font-size:11px;
  font-weight:700;
}

.badge-success{background:#dcfce7;color:var(--success);}
.badge-danger{background:#fee2e2;color:var(--danger);}
.badge-warn{background:#fef3c7;color:#92400e;}
.badge-muted{background:#e5e7eb;color:#374151;}

.row-actions{
  display:flex;
  gap:6px;
  justify-content:flex-end;
  flex-wrap:wrap;
}

.btn-mini{
  padding:6px 8px;
  font-size:11px;
  border-radius:8px;
  background:#f3f4f6;
  text-decoration:none;
}

.btn-mini-primary{color:var(--primary2);}
.btn-mini-danger{color:var(--danger);}

.cards{display:none;padding:10px;gap:8px;}

.card-item{
  border:1px solid #eee;
  border-radius:12px;
  padding:8px;
  display:flex;
  gap:8px;
}

.card-item h3{
  margin:0;
  font-size:13px;
  font-weight:700;
}
.card-item p{
  margin:2px 0;
  font-size:12px;
  color:var(--muted);
}

/* RESPONSIVE */

@media (max-width:768px){
  .table-wrap{display:none;}
  .cards{display:flex;flex-direction:column;}
}

@media (max-width:480px){
  .adm-wrap{padding:8px;}
  .img{width:100%;height:auto;max-height:120px;}
  .card-item{flex-direction:column;}
  .btn-mini{width:100%;text-align:center;}
}
</style>

<div class="adm-wrap">
<div class="adm-container">

<div class="adm-topbar">
  <div class="adm-title">
    <h1>Menus</h1>
    <p>Gestion rapide</p>
  </div>
  <div class="adm-actions">
    <a class="btn btn-secondary" href="{{ path('admin_dashboard') }}">Admin</a>
    <a class="btn btn-primary" href="{{ path('admin_menu_new') }}">+ Nouveau</a>
  </div>
</div>

{% set total = menus|length %}
{% set activeCount = menus|filter(m => m.isActive)|length %}

<div class="adm-card">

<div class="adm-toolbar">
  <div class="search">
    <input id="menuSearch" type="text" placeholder="Rechercher...">
  </div>
  <div style="display:flex;gap:6px;">
    <span class="pill">Total {{ total }}</span>
    <span class="pill">Actifs {{ activeCount }}</span>
  </div>
</div>

<div class="table-wrap">
<table>
<thead>
<tr>
<th>Image</th>
<th>Nom</th>
<th>Prix</th>
<th>Stock</th>
<th>Actif</th>
<th></th>
</tr>
</thead>
<tbody>
{% for menu in menus %}
{% set stock = menu.stock ?? 0 %}
<tr class="menu-row" data-name="{{ menu.name|lower }}">
<td>
{% if menu.imageUrl %}
<img class="img" src="{{ absolute_url(menu.imageUrl) }}">
{% else %}
<img class="img" src="{{ absolute_url('/uploads/default.jpg') }}">
{% endif %}
</td>
<td>{{ menu.name }}</td>
<td>€{{ menu.price }}</td>
<td>
{% if stock == 0 %}
<span class="badge badge-danger">0</span>
{% elseif stock < 5 %}
<span class="badge badge-warn">{{ stock }}</span>
{% else %}
<span class="badge badge-success">{{ stock }}</span>
{% endif %}
</td>
<td>
{% if menu.isActive %}
<span class="badge badge-success">Oui</span>
{% else %}
<span class="badge badge-muted">Non</span>
{% endif %}
</td>
<td>
<div class="row-actions">
<a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit',{id:menu.id}) }}">Edit</a>
<form method="post" action="{{ path('admin_menu_delete',{id:menu.id}) }}">
<input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
<button class="btn-mini btn-mini-danger">Suppr</button>
</form>
</div>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>

<div class="cards">
{% for menu in menus %}
{% set stock = menu.stock ?? 0 %}
<div class="card-item menu-card" data-name="{{ menu.name|lower }}">
{% if menu.imageUrl %}
<img class="img" src="{{ absolute_url(menu.imageUrl) }}">
{% else %}
<img class="img" src="{{ absolute_url('/uploads/default.jpg') }}">
{% endif %}
<div style="flex:1;">
<h3>{{ menu.name }}</h3>
<p>€{{ menu.price }}</p>
<div style="display:flex;gap:6px;flex-wrap:wrap;margin-top:4px;">
<span class="badge {% if stock == 0 %}badge-danger{% elseif stock < 5 %}badge-warn{% else %}badge-success{% endif %}">
{{ stock }}
</span>
<span class="badge {{ menu.isActive ? 'badge-success' : 'badge-muted' }}">
{{ menu.isActive ? 'Actif' : 'Inactif' }}
</span>
</div>
<div style="margin-top:6px;display:flex;gap:6px;flex-wrap:wrap;">
<a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit',{id:menu.id}) }}">Edit</a>
<form method="post" action="{{ path('admin_menu_delete',{id:menu.id}) }}">
<input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
<button class="btn-mini btn-mini-danger">Suppr</button>
</form>
</div>
</div>
</div>
{% endfor %}
</div>

</div>
</div>
</div>

<script>
(function(){
const input=document.getElementById('menuSearch');
const rows=document.querySelectorAll('.menu-row');
const cards=document.querySelectorAll('.menu-card');
function filter(){
const q=(input.value||'').toLowerCase();
rows.forEach(r=>r.style.display=(r.dataset.name||'').includes(q)?'':'none');
cards.forEach(c=>c.style.display=(c.dataset.name||'').includes(q)?'':'none');
}
input?.addEventListener('input',filter);
})();
</script>

{% endblock %}
