{% extends 'base.html.twig' %}

{% block title %}Admin • Menus{% endblock %}

{% block body %}
<style>
:root{
  --primary:#2563eb;
  --primary2:#1d4ed8;
  --danger:#dc2626;
  --success:#16a34a;
  --warning:#f59e0b;
  --muted:#64748b;
}

.adm-wrap{
  min-height:100vh;
  padding:16px;
  background:linear-gradient(160deg,#0b1220,#111b33);
}

.adm-container{
  max-width:1000px;
  margin:0 auto;
  display:flex;
  flex-direction:column;
  gap:14px;
}

.adm-topbar{
  background:rgba(255,255,255,.08);
  border-radius:16px;
  padding:16px;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  gap:12px;
}

.adm-title h1{
  margin:0;
  font-size:22px;
  font-weight:800;
  color:#fff;
}
.adm-title p{
  margin:4px 0 0;
  font-size:14px;
  color:rgba(255,255,255,.75);
}

.adm-actions{
  display:flex;
  gap:10px;
  flex-wrap:wrap;
}

.btn{
  border:none;
  border-radius:12px;
  padding:10px 16px;
  font-size:14px;
  font-weight:700;
  text-decoration:none;
  display:inline-flex;
  align-items:center;
}

.btn-primary{
  background:linear-gradient(135deg,var(--primary),var(--primary2));
  color:#fff;
}
.btn-secondary{
  background:rgba(255,255,255,.15);
  color:#fff;
}

.adm-card{
  background:#fff;
  border-radius:16px;
  overflow:hidden;
}

.adm-toolbar{
  padding:14px;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  gap:10px;
  border-bottom:1px solid #eee;
}

.search input{
  padding:10px 14px;
  border-radius:10px;
  border:1px solid #ddd;
  font-size:14px;
}

.pill{
  padding:6px 12px;
  border-radius:999px;
  font-size:13px;
  font-weight:700;
  background:#f3f4f6;
}

table{
  width:100%;
  border-collapse:collapse;
  font-size:15px;
}

thead th{
  padding:12px;
  background:#f9fafb;
  font-size:13px;
  text-transform:uppercase;
}

tbody td{
  padding:12px;
  border-bottom:1px solid #f1f1f1;
}

.img{
  width:70px;
  height:50px;
  object-fit:cover;
  border-radius:10px;
}

.badge{
  padding:6px 12px;
  border-radius:999px;
  font-size:13px;
  font-weight:700;
}

.badge-success{background:#dcfce7;color:var(--success);}
.badge-danger{background:#fee2e2;color:var(--danger);}
.badge-warn{background:#fef3c7;color:#92400e;}
.badge-muted{background:#e5e7eb;color:#374151;}

.row-actions{
  display:flex;
  gap:8px;
  justify-content:flex-end;
  flex-wrap:wrap;
}

.btn-mini{
  padding:8px 12px;
  font-size:13px;
  border-radius:10px;
  background:#f3f4f6;
  text-decoration:none;
}

.btn-mini-primary{color:var(--primary2);}
.btn-mini-danger{color:var(--danger);}

/* MOBILE APP STYLE */

.cards{display:none;}

@media (max-width:768px){

  .table-wrap{
    display:none;
  }

  .cards{
    display:flex;
    flex-direction:column;
    gap:18px;
    padding:16px;
  }

  .card-item{
    background:#ffffff;
    border-radius:20px;
    padding:16px;
    flex-direction:column;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
  }

  .img{
    width:100%;
    height:200px;
    border-radius:16px;
    object-fit:cover;
  }

  .card-item h3{
    font-size:22px;
    font-weight:800;
    margin-top:12px;
  }

  .card-item p{
    font-size:18px;
    font-weight:700;
    margin:8px 0;
  }

  .badge{
    font-size:15px;
    padding:8px 14px;
  }

  .btn-mini{
    width:100%;
    padding:14px;
    font-size:16px;
    font-weight:700;
    text-align:center;
  }

}
</style>

<div class="adm-wrap">
<div class="adm-container">

<div class="adm-topbar">
  <div class="adm-title">
    <h1>Menus</h1>
    <p>Gestion rapide</p>
  </div>
  <div class="adm-actions">
    <a class="btn btn-secondary" href="{{ path('admin_dashboard') }}">Admin</a>
    <a class="btn btn-primary" href="{{ path('admin_menu_new') }}">+ Nouveau</a>
  </div>
</div>

{% set total = menus|length %}
{% set activeCount = menus|filter(m => m.isActive)|length %}

<div class="adm-card">

<div class="adm-toolbar">
  <div class="search">
    <input id="menuSearch" type="text" placeholder="Rechercher...">
  </div>
  <div style="display:flex;gap:10px;">
    <span class="pill">Total {{ total }}</span>
    <span class="pill">Actifs {{ activeCount }}</span>
  </div>
</div>

<div class="table-wrap">
<table>
<thead>
<tr>
<th>Image</th>
<th>Nom</th>
<th>Prix</th>
<th>Stock</th>
<th>Actif</th>
<th></th>
</tr>
</thead>
<tbody>
{% for menu in menus %}
{% set stock = menu.stock ?? 0 %}
<tr class="menu-row" data-name="{{ menu.name|lower }}">
<td>
{% if menu.imageUrl %}
<img class="img" src="{{ absolute_url(menu.imageUrl) }}">
{% else %}
<img class="img" src="{{ absolute_url('/uploads/default.jpg') }}">
{% endif %}
</td>
<td>{{ menu.name }}</td>
<td>€{{ menu.price }}</td>
<td>
<span class="badge {% if stock == 0 %}badge-danger{% elseif stock < 5 %}badge-warn{% else %}badge-success{% endif %}">
{{ stock }}
</span>
</td>
<td>
<span class="badge {{ menu.isActive ? 'badge-success' : 'badge-muted' }}">
{{ menu.isActive ? 'Oui' : 'Non' }}
</span>
</td>
<td>
<div class="row-actions">
<a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit',{id:menu.id}) }}">Edit</a>
<form method="post" action="{{ path('admin_menu_delete',{id:menu.id}) }}">
<input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
<button class="btn-mini btn-mini-danger">Suppr</button>
</form>
</div>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>

<div class="cards">
{% for menu in menus %}
{% set stock = menu.stock ?? 0 %}
<div class="card-item menu-card" data-name="{{ menu.name|lower }}">

{% if menu.imageUrl %}
<img class="img" src="{{ absolute_url(menu.imageUrl) }}">
{% else %}
<img class="img" src="{{ absolute_url('/uploads/default.jpg') }}">
{% endif %}

<h3>{{ menu.name }}</h3>
<p>€{{ menu.price }}</p>

<div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:10px;">
<span class="badge {% if stock == 0 %}badge-danger{% elseif stock < 5 %}badge-warn{% else %}badge-success{% endif %}">
Stock: {{ stock }}
</span>

<span class="badge {{ menu.isActive ? 'badge-success' : 'badge-muted' }}">
{{ menu.isActive ? 'Actif' : 'Inactif' }}
</span>
</div>

<div style="margin-top:14px;display:flex;flex-direction:column;gap:12px;">
<a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit',{id:menu.id}) }}">Modifier</a>
<form method="post" action="{{ path('admin_menu_delete',{id:menu.id}) }}">
<input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
<button class="btn-mini btn-mini-danger">Supprimer</button>
</form>
</div>

</div>
{% endfor %}
</div>

</div>
</div>
</div>

{% endblock %}
