{% extends 'base.html.twig' %}

{% block title %}Admin ‚Ä¢ Menus{% endblock %}

{% block body %}
  <style>
    :root{
      --bg:#0b1220;
      --card:rgba(255,255,255,.92);
      --text:#0f172a;
      --muted:#64748b;
      --border:rgba(15,23,42,.12);
      --shadow: 0 18px 60px rgba(0,0,0,.18), 0 2px 10px rgba(0,0,0,.08);

      --primary:#2563eb;
      --primary2:#1d4ed8;
      --danger:#dc2626;
      --success:#16a34a;
      --warning:#f59e0b;

      --ring:rgba(37,99,235,.20);
    }

    .adm-wrap{
      min-height: calc(100vh - 0px);
      padding: 18px;
      background:
        radial-gradient(1000px 500px at 10% 10%, rgba(37,99,235,.18), transparent 55%),
        radial-gradient(900px 450px at 90% 20%, rgba(99,102,241,.15), transparent 55%),
        linear-gradient(160deg, #0b1220, #111b33);
    }

    .adm-container{
      max-width: 1100px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .adm-topbar{
      background: rgba(255,255,255,.10);
      border: 1px solid rgba(255,255,255,.14);
      border-radius: 16px;
      padding: 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      backdrop-filter: blur(10px);
    }

    .adm-title{
      display: flex;
      flex-direction: column;
      gap: 4px;
      color: #fff;
    }
    .adm-title h1{
      margin:0;
      font-size: 22px;
      letter-spacing: -.02em;
      font-weight: 900;
    }
    .adm-title p{
      margin:0;
      color: rgba(255,255,255,.75);
      font-size: 13px;
      font-weight: 700;
    }

    .adm-actions{
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }

    .btn{
      border: none;
      border-radius: 12px;
      padding: 10px 12px;
      font-weight: 900;
      cursor: pointer;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: transform .06s ease, filter .2s ease, box-shadow .2s ease;
      white-space: nowrap;
    }
    .btn:active{ transform: translateY(1px); }
    .btn-primary{
      color: #fff;
      background: linear-gradient(135deg, var(--primary), var(--primary2));
      box-shadow: 0 12px 28px rgba(37,99,235,.28);
    }
    .btn-secondary{
      color: #fff;
      background: rgba(255,255,255,.12);
      border: 1px solid rgba(255,255,255,.18);
    }
    .btn-danger{
      color:#fff;
      background: rgba(220,38,38,.95);
    }

    .adm-card{
      background: var(--card);
      border: 1px solid rgba(255,255,255,.35);
      border-radius: 16px;
      box-shadow: var(--shadow);
      overflow: hidden;
    }

    .adm-toolbar{
      padding: 14px;
      border-bottom: 1px solid rgba(15,23,42,.08);
      display:flex;
      align-items:center;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
    }

    .search{
      display:flex;
      align-items:center;
      gap:10px;
      flex: 1;
      min-width: 220px;
    }

    .search input{
      width: 100%;
      padding: 10px 12px;
      border-radius: 12px;
      border: 1px solid var(--border);
      outline: none;
      font-weight: 700;
      color: var(--text);
      background: rgba(255,255,255,.9);
      transition: box-shadow .2s ease, border-color .2s ease;
    }
    .search input:focus{
      border-color: rgba(37,99,235,.45);
      box-shadow: 0 0 0 4px var(--ring);
    }

    .stats{
      display:flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }
    .pill{
      padding: 8px 10px;
      border-radius: 999px;
      font-weight: 900;
      font-size: 12px;
      border: 1px solid rgba(15,23,42,.10);
      color: var(--text);
      background: rgba(255,255,255,.9);
    }

    table{
      width: 100%;
      border-collapse: collapse;
    }
    thead th{
      text-align: left;
      font-size: 12px;
      color: var(--muted);
      font-weight: 900;
      letter-spacing: .02em;
      padding: 12px 14px;
      background: rgba(15,23,42,.03);
      border-bottom: 1px solid rgba(15,23,42,.08);
    }
    tbody td{
      padding: 12px 14px;
      border-bottom: 1px solid rgba(15,23,42,.06);
      vertical-align: middle;
      color: var(--text);
      font-weight: 700;
    }
    tbody tr:hover{
      background: rgba(37,99,235,.04);
    }

    .img{
      width: 64px;
      height: 44px;
      border-radius: 10px;
      object-fit: cover;
      border: 1px solid rgba(15,23,42,.10);
      background: rgba(15,23,42,.04);
    }

    .badge{
      display:inline-flex;
      align-items:center;
      gap: 6px;
      padding: 6px 10px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 900;
      border: 1px solid rgba(15,23,42,.10);
    }
    .badge-success{ background: rgba(22,163,74,.10); color: var(--success); }
    .badge-muted{ background: rgba(100,116,139,.12); color: #334155; }
    .badge-warn{ background: rgba(245,158,11,.12); color: #92400e; }
    .badge-danger{ background: rgba(220,38,38,.10); color: var(--danger); }

    .row-actions{
      display:flex;
      gap: 8px;
      justify-content: flex-end;
      flex-wrap: wrap;
    }
    .btn-mini{
      padding: 8px 10px;
      border-radius: 10px;
      font-size: 12px;
      font-weight: 900;
      border: 1px solid rgba(15,23,42,.10);
      background: rgba(255,255,255,.9);
      color: var(--text);
      cursor: pointer;
      text-decoration: none;
    }
    .btn-mini:hover{ filter: brightness(1.02); }
    .btn-mini-danger{
      background: rgba(220,38,38,.10);
      border-color: rgba(220,38,38,.20);
      color: var(--danger);
    }
    .btn-mini-primary{
      background: rgba(37,99,235,.10);
      border-color: rgba(37,99,235,.20);
      color: var(--primary2);
    }

    .flash{
      padding: 12px 14px;
      border-radius: 14px;
      font-weight: 900;
      border: 1px solid rgba(255,255,255,.20);
      backdrop-filter: blur(8px);
      color: #fff;
    }
    .flash-success{ background: rgba(22,163,74,.20); }
    .flash-error{ background: rgba(220,38,38,.20); }

    /* Mobile cards */
    .cards{
      display:none;
      padding: 14px;
      gap: 12px;
    }
    .card-item{
      border: 1px solid rgba(15,23,42,.10);
      border-radius: 14px;
      padding: 12px;
      background: rgba(255,255,255,.95);
      display:flex;
      gap: 12px;
      align-items: flex-start;
    }
    .card-item h3{
      margin: 0;
      font-size: 14px;
      font-weight: 900;
    }
    .card-item p{
      margin: 6px 0 0;
      color: var(--muted);
      font-weight: 800;
      font-size: 12px;
    }
    .card-meta{
      display:flex;
      gap: 8px;
      flex-wrap: wrap;
      margin-top: 10px;
    }

    .table-wrap{ display:block; }

    @media (max-width: 760px){
      .table-wrap{ display:none; }
      .cards{ display:flex; flex-direction: column; }
      .adm-topbar{ align-items:flex-start; flex-direction: column; }
      .adm-actions{ width:100%; justify-content:flex-start; }
    }
  </style>

  <div class="adm-wrap">
    <div class="adm-container">

      <div class="adm-topbar">
        <div class="adm-title">
          <h1>Dashboard Menus</h1>
          <p>G√®re tes menus, stock, images et visibilit√©.</p>
        </div>

        <div class="adm-actions">
          <a class="btn btn-secondary" href="{{ path('admin_dashboard') }}">‚Üê Admin</a>
          <a class="btn btn-primary" href="{{ path('admin_menu_new') }}">+ Nouveau menu</a>
        </div>
      </div>

      {# flashes #}
      {% for msg in app.flashes('success') %}
        <div class="flash flash-success">‚úÖ {{ msg }}</div>
      {% endfor %}
      {% for msg in app.flashes('error') %}
        <div class="flash flash-error">‚õî {{ msg }}</div>
      {% endfor %}

      {% set total = menus|length %}
      {% set activeCount = 0 %}
      {% for m in menus %}
        {% if m.isActive %}{% set activeCount = activeCount + 1 %}{% endif %}
      {% endfor %}

      <div class="adm-card">
        <div class="adm-toolbar">
          <div class="search">
            <input id="menuSearch" type="text" placeholder="Rechercher par nom‚Ä¶">
          </div>

          <div class="stats">
            <span class="pill">Total: {{ total }}</span>
            <span class="pill">Actifs: {{ activeCount }}</span>
          </div>
        </div>

        {# Desktop table #}
        <div class="table-wrap">
          <table>
            <thead>
              <tr>
                <th style="width:80px;">Image</th>
                <th>Nom</th>
                <th style="width:120px;">Prix</th>
                <th style="width:120px;">Stock</th>
                <th style="width:120px;">Actif</th>
                <th style="width:220px; text-align:right;">Actions</th>
              </tr>
            </thead>
            <tbody id="menuTbody">
              {% for menu in menus %}
                {% set stock = menu.stock ?? 0 %}
                <tr class="menu-row" data-name="{{ menu.name|lower }}">
                  <td>
                    {% if menu.imageUrl %}
                      <img class="img" src="{{ menu.imageUrl }}" alt="{{ menu.name }}">
                    {% else %}
                      <img class="img" src="{{ asset('uploads/default.jpg') }}" alt="{{ menu.name }}">
                    {% endif %}
                  </td>

                  <td>
                    <div style="font-weight:900;">{{ menu.name }}</div>
                    {% if menu.description %}
                      <div style="color:var(--muted); font-weight:800; font-size:12px; margin-top:4px;">
                        {{ menu.description|slice(0, 80) }}{% if menu.description|length > 80 %}‚Ä¶{% endif %}
                      </div>
                    {% endif %}
                  </td>

                  <td>‚Ç¨{{ menu.price }}</td>

                  <td>
                    {% if stock == 0 %}
                      <span class="badge badge-danger">‚óè Rupture</span>
                    {% elseif stock < 5 %}
                      <span class="badge badge-warn">‚óè Faible ({{ stock }})</span>
                    {% else %}
                      <span class="badge badge-success">‚óè OK ({{ stock }})</span>
                    {% endif %}
                  </td>

                  <td>
                    {% if menu.isActive %}
                      <span class="badge badge-success">‚óè Oui</span>
                    {% else %}
                      <span class="badge badge-muted">‚óè Non</span>
                    {% endif %}
                  </td>

                  <td>
                    <div class="row-actions">
                      <a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit', {id: menu.id}) }}">‚úé Editer</a>

                      <form method="post"
                            action="{{ path('admin_menu_delete', {id: menu.id}) }}"
                            style="display:inline;"
                            onsubmit="return confirm('Supprimer ce menu ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
                        <button class="btn-mini btn-mini-danger" type="submit">üóë Supprimer</button>
                      </form>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr><td colspan="6" style="padding:16px; color:var(--muted); font-weight:900;">Aucun menu.</td></tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

        {# Mobile cards #}
        <div class="cards" id="menuCards">
          {% for menu in menus %}
            {% set stock = menu.stock ?? 0 %}
            <div class="card-item menu-card" data-name="{{ menu.name|lower }}">
              <div>
                {% if menu.imageUrl %}
                  <img class="img" src="{{ menu.imageUrl }}" alt="{{ menu.name }}">
                {% else %}
                  <img class="img" src="{{ asset('uploads/default.jpg') }}" alt="{{ menu.name }}">
                {% endif %}
              </div>

              <div style="flex:1;">
                <h3>{{ menu.name }}</h3>
                <p>‚Ç¨{{ menu.price }}</p>

                <div class="card-meta">
                  {% if stock == 0 %}
                    <span class="badge badge-danger">Rupture</span>
                  {% elseif stock < 5 %}
                    <span class="badge badge-warn">Stock {{ stock }}</span>
                  {% else %}
                    <span class="badge badge-success">Stock {{ stock }}</span>
                  {% endif %}

                  {% if menu.isActive %}
                    <span class="badge badge-success">Actif</span>
                  {% else %}
                    <span class="badge badge-muted">Inactif</span>
                  {% endif %}
                </div>

                <div style="margin-top:10px; display:flex; gap:8px; flex-wrap:wrap;">
                  <a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit', {id: menu.id}) }}">‚úé Editer</a>
                  <form method="post"
                        action="{{ path('admin_menu_delete', {id: menu.id}) }}"
                        style="display:inline;"
                        onsubmit="return confirm('Supprimer ce menu ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
                    <button class="btn-mini btn-mini-danger" type="submit">üóë Supprimer</button>
                  </form>
                </div>
              </div>
            </div>
          {% else %}
            <div style="padding:14px; color:var(--muted); font-weight:900;">Aucun menu.</div>
          {% endfor %}
        </div>

      </div>
    </div>
  </div>

  <script>
    (function(){
      const input = document.getElementById('menuSearch');
      const rows  = document.querySelectorAll('.menu-row');
      const cards = document.querySelectorAll('.menu-card');

      function filter(){
        const q = (input.value || '').trim().toLowerCase();

        rows.forEach(r => {
          const name = r.getAttribute('data-name') || '';
          r.style.display = name.includes(q) ? '' : 'none';
        });

        cards.forEach(c => {
          const name = c.getAttribute('data-name') || '';
          c.style.display = name.includes(q) ? '' : 'none';
        });
      }

      input?.addEventListener('input', filter);
    })();
  </script>
{% endblock %}
