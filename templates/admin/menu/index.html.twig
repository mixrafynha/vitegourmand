{% extends 'base.html.twig' %}

{% block title %}Admin • Menus{% endblock %}

{% block body %}
<style>
:root{
  --bg:#0b1220;
  --card:rgba(255,255,255,.92);
  --text:#0f172a;
  --muted:#64748b;
  --border:rgba(15,23,42,.12);
  --shadow:0 18px 60px rgba(0,0,0,.18),0 2px 10px rgba(0,0,0,.08);
  --primary:#2563eb;
  --primary2:#1d4ed8;
  --danger:#dc2626;
  --success:#16a34a;
  --warning:#f59e0b;
  --ring:rgba(37,99,235,.20);
}

.adm-wrap{
  min-height:100vh;
  padding:18px;
  background:
    radial-gradient(1000px 500px at 10% 10%, rgba(37,99,235,.18), transparent 55%),
    radial-gradient(900px 450px at 90% 20%, rgba(99,102,241,.15), transparent 55%),
    linear-gradient(160deg,#0b1220,#111b33);
}

.adm-container{
  max-width:1100px;
  margin:0 auto;
  display:flex;
  flex-direction:column;
  gap:14px;
}

.adm-topbar{
  background:rgba(255,255,255,.10);
  border:1px solid rgba(255,255,255,.14);
  border-radius:16px;
  padding:16px;
  display:flex;
  justify-content:space-between;
  gap:12px;
  backdrop-filter:blur(10px);
}

.adm-title h1{
  margin:0;
  font-size:22px;
  font-weight:900;
  color:#fff;
}
.adm-title p{
  margin:0;
  font-size:13px;
  color:rgba(255,255,255,.75);
  font-weight:700;
}

.adm-actions{
  display:flex;
  gap:10px;
  flex-wrap:wrap;
}

.btn{
  border:none;
  border-radius:12px;
  padding:10px 14px;
  font-weight:900;
  cursor:pointer;
  text-decoration:none;
  display:inline-flex;
  align-items:center;
  gap:8px;
}

.btn-primary{
  color:#fff;
  background:linear-gradient(135deg,var(--primary),var(--primary2));
}
.btn-secondary{
  color:#fff;
  background:rgba(255,255,255,.12);
  border:1px solid rgba(255,255,255,.18);
}

.adm-card{
  background:var(--card);
  border-radius:16px;
  box-shadow:var(--shadow);
  overflow:hidden;
}

.adm-toolbar{
  padding:14px;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  gap:10px;
  border-bottom:1px solid rgba(15,23,42,.08);
}

.search input{
  padding:10px 12px;
  border-radius:12px;
  border:1px solid var(--border);
  font-weight:700;
  width:220px;
}

.stats{
  display:flex;
  gap:10px;
  flex-wrap:wrap;
}

.pill{
  padding:8px 12px;
  border-radius:999px;
  font-size:12px;
  font-weight:900;
  background:#fff;
}

table{
  width:100%;
  border-collapse:collapse;
}

thead th{
  font-size:12px;
  text-align:left;
  padding:12px;
  background:rgba(15,23,42,.04);
}

tbody td{
  padding:12px;
  border-bottom:1px solid rgba(15,23,42,.06);
  font-weight:700;
}

.img{
  width:64px;
  height:44px;
  object-fit:cover;
  border-radius:10px;
  display:block;
}

.badge{
  padding:6px 10px;
  border-radius:999px;
  font-size:12px;
  font-weight:900;
}

.badge-success{background:rgba(22,163,74,.15);color:var(--success);}
.badge-danger{background:rgba(220,38,38,.15);color:var(--danger);}
.badge-warn{background:rgba(245,158,11,.15);color:#92400e;}
.badge-muted{background:rgba(100,116,139,.15);color:#334155;}

.row-actions{
  display:flex;
  gap:8px;
  justify-content:flex-end;
  flex-wrap:wrap;
}

.btn-mini{
  padding:8px 10px;
  border-radius:10px;
  font-size:12px;
  font-weight:900;
  background:#fff;
  border:1px solid rgba(15,23,42,.10);
  text-decoration:none;
}

.btn-mini-primary{color:var(--primary2);}
.btn-mini-danger{color:var(--danger);}

.cards{display:none;padding:14px;gap:12px;}

.card-item{
  border:1px solid rgba(15,23,42,.10);
  border-radius:14px;
  padding:12px;
  display:flex;
  gap:12px;
  background:#fff;
}

.card-item h3{margin:0;font-size:14px;font-weight:900;}
.card-item p{margin:6px 0 0;font-size:12px;color:var(--muted);font-weight:800;}

.card-meta{
  display:flex;
  gap:8px;
  flex-wrap:wrap;
  margin-top:8px;
}

/* RESPONSIVE */

@media (max-width:992px){
  .adm-topbar{flex-direction:column;align-items:flex-start;}
  .adm-actions{width:100%;}
  .search input{width:100%;}
}

@media (max-width:760px){
  .table-wrap{display:none;}
  .cards{display:flex;flex-direction:column;}
}

@media (max-width:480px){
  .adm-wrap{padding:10px;}
  .card-item{flex-direction:column;}
  .img{width:100%;height:auto;max-height:160px;}
  .btn-mini{width:100%;text-align:center;}
}
</style>

<div class="adm-wrap">
<div class="adm-container">

<div class="adm-topbar">
  <div class="adm-title">
    <h1>Dashboard Menus</h1>
    <p>Gère tes menus, stock et visibilité</p>
  </div>
  <div class="adm-actions">
    <a class="btn btn-secondary" href="{{ path('admin_dashboard') }}">← Admin</a>
    <a class="btn btn-primary" href="{{ path('admin_menu_new') }}">+ Nouveau</a>
  </div>
</div>

{% set total = menus|length %}
{% set activeCount = menus|filter(m => m.isActive)|length %}

<div class="adm-card">

<div class="adm-toolbar">
  <div class="search">
    <input id="menuSearch" type="text" placeholder="Rechercher...">
  </div>
  <div class="stats">
    <span class="pill">Total {{ total }}</span>
    <span class="pill">Actifs {{ activeCount }}</span>
  </div>
</div>

<div class="table-wrap">
<table>
<thead>
<tr>
<th>Image</th>
<th>Nom</th>
<th>Prix</th>
<th>Stock</th>
<th>Actif</th>
<th style="text-align:right;">Actions</th>
</tr>
</thead>
<tbody>
{% for menu in menus %}
{% set stock = menu.stock ?? 0 %}
<tr class="menu-row" data-name="{{ menu.name|lower }}">
<td>
{% if menu.image %}
<img class="img" src="{{ absolute_url(asset('uploads/' ~ menu.image)) }}" alt="{{ menu.name }}">
{% else %}
<img class="img" src="{{ absolute_url(asset('uploads/default.jpg')) }}" alt="">
{% endif %}
</td>
<td>{{ menu.name }}</td>
<td>€{{ menu.price }}</td>
<td>
{% if stock == 0 %}
<span class="badge badge-danger">Rupture</span>
{% elseif stock < 5 %}
<span class="badge badge-warn">{{ stock }}</span>
{% else %}
<span class="badge badge-success">{{ stock }}</span>
{% endif %}
</td>
<td>
{% if menu.isActive %}
<span class="badge badge-success">Oui</span>
{% else %}
<span class="badge badge-muted">Non</span>
{% endif %}
</td>
<td>
<div class="row-actions">
<a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit',{id:menu.id}) }}">Editer</a>
<form method="post" action="{{ path('admin_menu_delete',{id:menu.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ?');">
<input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
<button class="btn-mini btn-mini-danger">Supprimer</button>
</form>
</div>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>

<div class="cards">
{% for menu in menus %}
{% set stock = menu.stock ?? 0 %}
<div class="card-item menu-card" data-name="{{ menu.name|lower }}">
{% if menu.image %}
<img class="img" src="{{ absolute_url(asset('uploads/' ~ menu.image)) }}" alt="">
{% else %}
<img class="img" src="{{ absolute_url(asset('uploads/default.jpg')) }}" alt="">
{% endif %}
<div style="flex:1;">
<h3>{{ menu.name }}</h3>
<p>€{{ menu.price }}</p>
<div class="card-meta">
{% if stock == 0 %}
<span class="badge badge-danger">Rupture</span>
{% elseif stock < 5 %}
<span class="badge badge-warn">{{ stock }}</span>
{% else %}
<span class="badge badge-success">{{ stock }}</span>
{% endif %}
{% if menu.isActive %}
<span class="badge badge-success">Actif</span>
{% else %}
<span class="badge badge-muted">Inactif</span>
{% endif %}
</div>
<div style="margin-top:10px;display:flex;gap:8px;flex-wrap:wrap;">
<a class="btn-mini btn-mini-primary" href="{{ path('admin_menu_edit',{id:menu.id}) }}">Editer</a>
<form method="post" action="{{ path('admin_menu_delete',{id:menu.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ?');">
<input type="hidden" name="_token" value="{{ csrf_token('delete_menu_' ~ menu.id) }}">
<button class="btn-mini btn-mini-danger">Supprimer</button>
</form>
</div>
</div>
</div>
{% endfor %}
</div>

</div>
</div>
</div>

<script>
(function(){
const input=document.getElementById('menuSearch');
const rows=document.querySelectorAll('.menu-row');
const cards=document.querySelectorAll('.menu-card');

function filter(){
const q=(input.value||'').toLowerCase();
rows.forEach(r=>{
r.style.display=(r.dataset.name||'').includes(q)?'':'none';
});
cards.forEach(c=>{
c.style.display=(c.dataset.name||'').includes(q)?'':'none';
});
}
input?.addEventListener('input',filter);
})();
</script>

{% endblock %}
